@model DeveloperAssessment.Web.ViewModels.Blog.BlogListViewModel

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var blog in Model.BlogPosts)
        {
        <div class="col">
            <div class="card h-100">
                <div class="card-img-container" style="height: 200px; overflow: hidden;">
                    <img src="@blog.Image" class="card-img-top" alt="@blog.Title" style="object-fit: cover; width: 100%; height: 100%;">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@blog.Title</h5>
                    <p class="card-text mb-auto">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="/home/blog/@blog.Id" class="btn btn-success mt-auto">Go somewhere</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>

